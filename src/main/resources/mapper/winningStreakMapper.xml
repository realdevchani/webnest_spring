<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.webnest.mapper.WinningStreakMapper">

<!--    <!— 특정 유저가 팔로잉하는 유저들 조회 —>-->
<!--    <!— followerId가 팔로잉하는 사람이므로, followerId = #{userId}인 경우의 userId들 —>-->
<!--    <!— 유저 A가 팔로잉하는 사람들 = followerId = A인 경우의 userId들 —>-->
    <select id="selectCountUserWinCountByUserId" parameterType="Long" resultType="Integer">
        select COUNT(USER_ID)
        from TBL_WINNING_STREAK
        where USER_ID= #{userId}
    </select>


</mapper>

